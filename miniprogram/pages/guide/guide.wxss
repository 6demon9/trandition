/* pages/guide/guide.wxss */
.container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: column;
  background-color: #FFF7E7;
  height: 100vh;
  width: 100%;
  padding: 0;
  /* 清除默认的内边距 */
}

.map {
  width: 100%;
  height: 50vh;
}

.map image {
  width: 100%;
  height: 100%;
}

/* 定义按钮的基础样式 */
.animated-button {
  padding: 10px 20px;
  font-size: 16px;
  background-color: #AD433C;
  color: white;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  animation: scaleAnimation 2s infinite;
  /* 放大缩小动画，2秒循环一次 */
  box-shadow: 0px 3px 6px rgba(15, 3, 3, 0.2);
  /* 添加按钮阴影 */
}

/* 定义放大缩小的动画 */
@keyframes scaleAnimation {
  0% {
    transform: scale(1);
    /* 初始大小 */
  }

  50% {
    transform: scale(1.2);
    /* 放大 1.2 倍 */
  }

  100% {
    transform: scale(1);
    /* 恢复原始大小 */
  }
}

.check {
  flex: 1;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding: 20px;
  width: 100%;
}

.views {
  margin-top: 10%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;
  width: 94%;
  flex-wrap: wrap;
}

.view1 {
  background-color: #f5e7cffd;
  display: flex;
  width: 45%;
  height: auto;
  margin: 5px;
  color: #684A23;
  box-shadow: rgba(0, 0, 0, 0.16) 0px 1px 4px;
}

.view1 image {
  width: 100%;
  height: 50px;
}

.more {
  margin-top: 10%;
  color: #A19274;
}