.whole {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  height: 100vh;
  width: 100%;
}

.head {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  background-color: #F0E0BA;
  font-family: "阿里妈妈东方大楷 Regular";
  padding: 5rpx;
  overflow: hidden;
}









.head image {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  border: 1rpx solid transparent;
  background-color: rgb(255, 237, 205);
}

.wxLogin {
  background-color: transparent;
}

.icons {
  display: flex;
  justify-content: space-around;
  width: 100%;
  padding: 5rpx;
  gap: 20rpx;
  margin-bottom: 50rpx;
}


.swiper-container {
  width: 100%;
  height: 200px;
  /* 设置轮播图的高度 */
}

.slider-image {
  width: 80%;
  height: 100%;
  /* 让图片填充容器 */
}


.wode {
  margin-top: 100rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-around;
  width: 100%;
  font-family: "阿里妈妈刀隶体 Regular";
  color: white;
  font-weight: lighter;
  font-size: 36rpx;
}

.icon {
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

/* index.wxss */
.container {
  width: 100%;
  height: 200px;
  background-color: rgb(255, 237, 205);
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #FFF7E7;
  flex: 1;
  padding: 10px;
}

.swiper {
  width: 100%;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.swiper-item {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 200rpx;
}

.slider-image {
  width: 100%;
  /* 图片宽度自动调整 */
  height: 200rpx;
  /* 图片高度设置为容器的 80% */
}

.record {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;
  width: 100%;
  height: auto;
}

.rec {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;
  background-color: white;
  height: 150rpx;
  width: 50%;
}

.way {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: row;
  background-color: white;
  height: 150rpx;
  width: 50%;
  border-right: 1px solid silver;
}

.way image {
  width: 50rpx;
  height: 50rpx;
}

.record image {
  width: 50rpx;
  height: 50rpx;
}

.function {
  display: flex;
  justify-content: space-around;
  align-items: center;
  flex-direction: column;
  width: 100%;
}

.function1 {
  display: flex;
  justify-content: flex-start;
  gap: 30rpx;
  align-items: center;
  flex-direction: column;
  color: #684A23;
  background-color: white;
  width: 95%;
  padding: 20rpx;
}

.on {
  width: 100%;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
}

.left {
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  flex: 1;
  gap: 10rpx;
}
.right{
  display: flex;
  width: 40rpx;
}
.under {
  position: relative;
  bottom: 0;
}

.function1 image {
  width: 50rpx;
  height: 50rpx;
}

.divider {
  width: 98%;
  /* 设置分割线宽度 */
  height: 1px;
  background-color: #ccc;
  /* 分割线颜色 */
}